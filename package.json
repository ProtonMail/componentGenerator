{
  "name": "component-generator",
  "version": "1.6.0",
  "description": "CLI to create new components for: Angular Front-End for ProtonMail",
  "main": "index.js",
  "bin": {
    "appComponent": "index.js"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "dedent": "^0.7.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "prettier": "^1.16.1",
    "prompts": "^2.0.1"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0"
  },
  "scripts": {
    "bind:bash": "echo \"\nalias appComponent='$(pwd)/index.js'\" >> ~/.bashrc",
    "bind:zsh": "echo \"\nalias appComponent='$(pwd)/index.js'\" >> ~/.zshrc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretty": "prettier --write index.js lib/**/*.js lib/*.js",
    "postversion": "git push --tags"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
